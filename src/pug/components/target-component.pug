main.flex-grow.grid.gap-6.overflow-hidden.content-start.relative(class="p-3 md:py-6 md:px-6  lg:py-8 lg:px-12" x-data="{ tab: 'all' }")
	include ./head-tabs
	a(href="").header__primary__start My Target
	.grid(class=" grid-cols-12 md:gap-x-6 gap-x-2 gap-y-6") 
		form(class="md:col-span-5 col-span-12")
			label(for="default-search", class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white") Search
			div(class="relative")
				div(class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none")
					svg(class="w-4 h-4 text-gray-500 dark:text-gray-400", aria-hidden="true", xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 20 20")
						path(stroke="currentColor", stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z")
				input#default-search(type="search", class=" w-full !px-9", placeholder="Search by name , phone ...", required)
		div.hidden(class="md:block lg:col-span-2")
		div( class=" relative col-span-12 md:col-span-6 lg:col-span-5 bg-white rounded-2xl border border-gray-300     content-start overflow-hidden text-xs sm:text-sm lg:text-base cent" )
			ul(class=" w-full whitespace-nowrap p-1  overflow-x-auto  gap-1 grid grid-cols-4 items-stretch " )
				li(class=" cursor-pointer  hover:bg-primary hover:bg-opacity-10 hover:text-primary  tracking-wider font-semibold px-1 py-2 text-center rounded-2xl  " :class="tab === 'all'? ' bg-primary bg-opacity-10  text-primary':'text-neutral-700'" @click="tab = 'all'")
					button All
				li(class=" cursor-pointer  hover:bg-primary hover:bg-opacity-10 hover:text-primary tracking-wider font-semibold px-1 py-2 rounded-2xl text-center" :class="tab === 'Male' ? ' bg-primary bg-opacity-10  text-primary':'text-neutral-700 '"  @click="tab = 'Male'")
					button Male
				li(class=" cursor-pointer  hover:bg-primary hover:bg-opacity-10 hover:text-primary text-neutral-700 tracking-wider font-semibold px-1 py-2 rounded-2xl text-center" :class="tab === 'Female'? ' bg-primary bg-opacity-10  text-primary':'text-neutral-700'" @click="tab = 'Female'")
					button Female
				li(class=" cursor-pointer  hover:bg-primary hover:bg-opacity-10 hover:text-primary text-neutral-700 tracking-wider font-semibold px-1 py-2 rounded-2xl text-center" :class="tab === 'Online'? ' bg-primary bg-opacity-10  text-primary':'text-neutral-700'" @click="tab = 'Online'")
					button Online
	div(class="p-4  bg-white rounded-2xl border border-gray-300 grid xl:grid-cols-5 lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2  xl:divide-x")
		.flex.items-center.gap-3.p-4 
			img(src="/dist/assets/palnned-points.png", alt="" class="w-14 h-14")
			.grid.gap-1
				div.font-semibold(class="text-[#2B6DF5]") 95
				div.text-zinc-600 Planned Points
		.flex.items-center.gap-3.p-4 
			img(src="/dist/assets/total-acheived.png", alt="" class="w-14 h-14")
			.grid.gap-1
				div.font-semibold(class="text-[#35B677]") 22.25
				div.text-zinc-600 Total achieved
		.flex.items-center.gap-3.p-4 
			img(src="/dist/assets/remaining-points.png", alt="" class="w-14 h-14")
			.grid.gap-1
				div.font-semibold(class="text-[#AC7AB5]") 72.75
				div.text-zinc-600 Remaining points
		.flex.items-center.gap-3.p-4 
			img(src="/dist/assets/deductions.png", alt="" class="w-14 h-14")
			.grid.gap-1
				div.font-semibold(class="text-[#E51F1B]") 0
				div.text-zinc-600 Deductions
		.flex.items-center.gap-3.p-4 
			img(src="/dist/assets/gifts.png", alt="" class="w-14 h-14")
			.grid.gap-1
				div.font-semibold(class="text-[#41A4DD]") 0
				div.text-zinc-600 Gifts
	.grid.gap-6.items-start(class="2xl:grid-cols-3 lg:grid-cols-2 ")
		include ./target-card
