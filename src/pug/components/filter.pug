include ../mixins/button-sec.pug
.fixed.inset-0.bg-black.bg-opacity-50.z-50.hidden.justify-end(x-show="filter" :class="filter ? '!flex' :'' "   )
	div.bg-white.relative.p-4.py-8.grid.gap-6.w-72.h-screen.content-start( x-show="filter" x-transition:enter="transition transform ease-out duration-500 "
			x-transition:enter-start="opacity-0 rtl:translate-x-[200px] ltr:-translate-x-[-200px]"
			x-transition:enter-end="opacity-100 "
			x-transition:leave="transition transform ease-in duration-300"
			x-transition:leave-start="opacity-100 translate-x-0"
			x-transition:leave-end="opacity-0 rtl:translate-x-[200px] ltr:-translate-x-[-200px]")
		.cent__bet
			div( class=" text-neutral-700  font-semibold leading-[18px] tracking-widest") Filter
			button(class="fa-solid fa-x  text-primary hover:scale-150 duration-200 transform " @click="filter = false")
		form#select(class="h-[75vh]  content-start grid gap-6 overflow-y-auto relative")
			.cent__bet
				div( class=" text-neutral-600  text-sm font-semibold leading-[18px] tracking-wider") New Leads
				div(class=" cursor-pointer text-neutral-500  text-sm font-semibold leading-[18px] hover:text-primary hover:scale-110 transform duration-200 tracking-wider" onclick="resetForm ('select')") Reset
			select     
				option( style="color:#eee !important" disabled selected hidden) City
				option(value='US') United States
				option(value='CA') Canada
				option(value='FR') France
				option(value='DE') Germany	
			select     
				option( style="color:#eee !important" disabled selected hidden) Lead Type
				option(value='US') United States
				option(value='CA') Canada
				option(value='FR') France
				option(value='DE') Germany	
			select     
				option( style="color:#eee !important" disabled selected hidden) Lead source
				option(value='US') United States
				option(value='CA') Canada
				option(value='FR') France
				option(value='DE') Germany	
			select     
				option( style="color:#eee !important" disabled selected hidden) Products
				option(value='US') United States
				option(value='CA') Canada
				option(value='FR') France
				option(value='DE') Germany	
			select     
				option( style="color:#eee !important" disabled selected hidden) Branch
				option(value='US') United States
				option(value='CA') Canada
				option(value='FR') France
				option(value='DE') Germany	
			include ./line-breake
			form#date.content-start.grid.gap-6
				.cent__bet
					div( class=" text-neutral-600  text-sm font-semibold leading-[18px] tracking-wider") Creation Date
					div(class=" cursor-pointer text-neutral-500  text-sm font-semibold leading-[18px] hover:text-primary hover:scale-110 transform duration-200 tracking-wider" ) Reset
				include ./date-between
		.absolute.bg-white.right-0.left-0.bottom-10.px-3
			.grid.grid-cols-2.gap-3
				div( class=" text-neutral-600  text-sm font-semibold leading-[18px] tracking-wider" onclick="resetFormAll ()") 
					+button-sec('Reset all',"","w-full ")
				button.button__primary(class="md:px-0 md:text-sm !px-2 !text-[13]") Apply Now